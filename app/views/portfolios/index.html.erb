<h1>Portfolio Items Index</h1>

<% @portfolio_items.each do |portfolio_item| %>
  <h2><%= portfolio_item.title %></h2>
  <h3><%= portfolio_item.subtitle %></h3>
  <p><%= portfolio_item.body %></p>
  <%= image_tag(portfolio_item.thumb_image ||=
                Faker::Placeholdit.image("350x200", 'jpg')) %>
  <br>
  <button><%= link_to "display", portfolio_path(portfolio_item) %></button>
  <button><%= link_to "edit", edit_portfolio_path(portfolio_item) %></button>
  <button><%= link_to "remove", portfolio_path(portfolio_item), method: :delete %></button>
<% end %>


